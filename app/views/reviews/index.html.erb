

<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>

<h2>Reviews You Made</h2>

<%= link_to 'Write a New Review', new_review_path, class: 'btn btn-primary' %>
<%= link_to 'Services', services_path, class: 'btn btn-primary' %>
<ul>
<% @reviews.each do |review| %>
  <li id="review_<%= review.id %>">
    <strong>Vendor Name:</strong> <%= review.vendor_name %><br>
    <strong>Service:</strong> <%= review.title %><br>
    <strong>Rating:</strong> <%= review.rating %><br>
    <strong>Comment:</strong> <%= review.comment %><br>

    <%= link_to 'Delete', review_path(review),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this review?' },
                class: 'btn btn-danger' %>
  </li>
<% end %>
</ul>
