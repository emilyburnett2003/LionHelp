<style>
.centered {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
}
.centered h2 {
  text-align: center;
}
.centered .button-row {
  margin-bottom: 20px;
}
.centered .review-list {
  width: 100%;
  max-width: 600px;
  padding: 0;
  list-style: none;
}
.centered .review-card {
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 10px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.07);
  padding: 18px 26px;
  margin-bottom: 22px;
  text-align: left;
  display: flex;
  justify-content: space-between;
  align-items: center;  /* centers Delete button vertically */
}
.centered .review-details {
  flex: 1 1 auto;
}
.centered .delete-btn-box {
  margin-left: 16px;
}
.centered .btn {
  margin-right: 8px;
  margin-bottom: 6px;
}
</style>

<div class="centered">
  <% flash.each do |key, message| %>
    <p class="<%= key %>"><%= message %></p>
  <% end %>


  <h2>Reviews</h2>

<div class="button-row">
  <%= link_to 'All Reviews', reviews_path, class: 'btn btn-secondary' %>
  <%= link_to 'Reviews About Me (Vendor)', reviews_path(filter: 'about_me_vendor'), class: 'btn btn-primary' %>
  <%= link_to 'Reviews I Wrote', reviews_path(filter: 'written_by_me'), class: 'btn btn-outline-primary' %>
  <%= link_to 'Write a New Review', new_review_path, class: 'btn btn-success' %>
</div>



  <ul class="review-list">
    <% @reviews.each do |review| %>
      <li class="review-card" id="review_<%= review.id %>">
        <div class="review-details">
          <strong>Vendor Name:</strong> <%= review.vendor_name %><br>
          <strong>Service:</strong> <%= review.title %><br>
          <strong>Rating:</strong> <%= review.rating %><br>
          <strong>Comment:</strong> <%= review.comment %>
        </div>
        <div class="delete-btn-box">
          <%= link_to 'Delete', review_path(review),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this review?' },
                class: 'btn btn-danger' %>
        </div>
      </li>
    <% end %>
  </ul>
</div>